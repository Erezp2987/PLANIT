<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6e5b4"
    tools:context=".ACTIVITIES.Login_Activity">

    <!-- App Logo -->
<ImageView
android:id="@+id/logoImageView"
android:layout_width="180dp"
android:layout_height="120dp"
android:layout_marginTop="64dp"
android:src="@drawable/app_logo"
android:contentDescription="App Logo"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <!-- Login Title -->
<TextView
android:id="@+id/loginTitleTextView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="24dp"
android:text="Login"
android:textColor="#2e3b5b"
    android:textSize="28sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logoImageView" />

    <!-- Email Input -->
<com.google.android.material.textfield.TextInputLayout
android:id="@+id/emailInputLayout"
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginTop="48dp"
android:layout_marginEnd="32dp"
android:hint="Email"
app:boxStrokeColor="#3f517d"
    app:hintTextColor="#3f517d"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/loginTitleTextView">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/emailEditText"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="textEmailAddress"
android:textColor="#2e3b5b" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Input -->
<com.google.android.material.textfield.TextInputLayout
android:id="@+id/passwordInputLayout"
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginTop="16dp"
android:layout_marginEnd="32dp"
android:hint="Password"
app:boxStrokeColor="#3f517d"
    app:hintTextColor="#3f517d"
    app:endIconMode="password_toggle"
    app:endIconTint="#3f517d"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/emailInputLayout">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/passwordEditText"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="textPassword"
android:textColor="#2e3b5b" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Remember Me Checkbox -->
<CheckBox
android:id="@+id/rememberMeCheckBox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginTop="16dp"
android:text="Remember Me"
android:textColor="#2e3b5b"
    android:buttonTint="#eac65a"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/passwordInputLayout" />

    <!-- Login Button -->
<Button
android:id="@+id/loginButton"
android:layout_width="0dp"
android:layout_height="60dp"
android:layout_marginStart="32dp"
android:layout_marginTop="24dp"
android:layout_marginEnd="32dp"
android:backgroundTint="#2e3b5b"
    android:text="Log In"
    android:textColor="#ffffff"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rememberMeCheckBox" />

    <!-- Register Button -->
<Button
android:id="@+id/registerviewChange"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="32dp"
android:text="Don't have an account? Register"
android:textColor="#3f517d"
    android:textSize="16sp"
    android:backgroundTint="#f0d687"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
