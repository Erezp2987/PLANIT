<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#E3EFD3">

    <!-- Gradient Header -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvNewTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Trip"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:shadowColor="#0D2B1D"
        android:shadowRadius="4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Suggestions Button -->
    <Button
        android:id="@+id/btnTripSuggestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Trip Suggestions"
        android:textColor="#FFFFFF"
        android:backgroundTint="#688F71"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="100dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Plan Trip Button -->
    <Button
        android:id="@+id/btnPlanTrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Planning Trip"
        android:textColor="#FFFFFF"
        android:backgroundTint="#345635"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnTripSuggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>